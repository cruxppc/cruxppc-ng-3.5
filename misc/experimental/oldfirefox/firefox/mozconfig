# use an OBJDIR
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/firefox-shared

# parallel build
mk_add_options MOZ_MAKE_FLAGS=-j2

# grab the defaults from the firefox tarball
. $topsrcdir/browser/config/mozconfig

# crux options

ac_add_options --prefix=/usr
